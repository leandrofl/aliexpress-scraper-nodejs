{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "üöÄ Debug AliExpress Scraper",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/main.js",
            "console": "integratedTerminal",
            "runtimeExecutable": "C:/Program Files/nodejs/node.exe",
            "env": {
                "NODE_ENV": "development"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "stopOnEntry": false,
            "runtimeArgs": [
                "--enable-source-maps"
            ]
        },
        {
            "name": "üêõ Debug Scraper (Headless OFF)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/main.js",
            "console": "integratedTerminal",
            "runtimeExecutable": "C:/Program Files/nodejs/node.exe",
            "env": {
                "NODE_ENV": "development",
                "HEADLESS": "false",
                "DEBUG": "true",
                "SLOW_MO": "1000"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "stopOnEntry": false
        },
        {
            "name": "‚ö° Debug Scraper (Fast Mode)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/main.js",
            "console": "integratedTerminal",
            "runtimeExecutable": "C:/Program Files/nodejs/node.exe",
            "env": {
                "NODE_ENV": "development",
                "HEADLESS": "true",
                "DEBUG": "true",
                "MAX_PAGES_PER_CATEGORY": "1"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "stopOnEntry": false
        },
        {
            "name": "üîß Debug Config Only",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/config.js",
            "console": "integratedTerminal",
            "runtimeExecutable": "C:/Program Files/nodejs/node.exe",
            "env": {
                "DEBUG": "true"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}
